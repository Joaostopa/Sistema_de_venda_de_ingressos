{{> partials/header}}

<div class="container">
    <div class="card">
        <h1 class="title">Comprar Ingresso</h1>

        <div class="ticket-info">
            <p><strong>üéü Ingresso:</strong> {{ticket.name}}</p>
            <p><strong>üí∞ Pre√ßo:</strong> R$ {{ticket.price}}</p>
            <p><strong>üì¶ Dispon√≠veis:</strong> {{ticket.stock}}</p>
        </div>

        <form id="purchase-form">
            <input type="hidden" name="ticketTypeId" value="{{ticket._id}}">

            <div class="form-group">
                <label for="quantity">Quantidade:</label>
                <input type="number" id="quantity" name="quantity" min="1" max="{{ticket.stock}}" required>
            </div>

            <button type="submit" class="btn">Comprar</button>
        </form>
    </div>
</div>

<script>
document.getElementById("purchase-form").addEventListener("submit", async function(event) {
    event.preventDefault();

    const token = localStorage.getItem("token");
    if (!token) {
        alert("‚ö†Ô∏è Voc√™ precisa estar logado para comprar ingressos.");
        window.location.href = "/login";
        return;
    }

    const ticketTypeId = document.querySelector("input[name='ticketTypeId']").value;
    const quantity = document.getElementById("quantity").value;

    console.log("üîπ Enviando token na requisi√ß√£o POST para /api/purchases:", token);

    const response = await fetch("/api/purchases", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
            "Authorization": `Bearer ${token}`  
        },
        body: JSON.stringify({ items: [{ ticketTypeId, quantity }] })
    });

    const data = await response.json();
    if (response.ok) {
        alert("‚úÖ Compra realizada com sucesso!");
        window.location.href = "/purchases";
    } else {
        alert("‚ùå Erro ao comprar ingresso: " + data.error);
    }
});
</script>

