{{> partials/header}}

<h1>Escolha seus ingressos</h1>

<ul>
    {{#tickets}}
    <li>
        <p><strong>{{name}}</strong></p>
        <p>Preço: R$ {{price}}</p>
        <p>Disponível: {{stock}} ingressos</p>
        <button class="buy-btn" data-ticket-id="{{_id}}">Comprar</button>
    </li>
    {{/tickets}}
</ul>

{{> partials/footer}}

<script>
document.querySelectorAll('.buy-btn').forEach(button => {
    button.addEventListener('click', async function(event) {
        event.preventDefault();

        const ticketId = this.getAttribute('data-ticket-id');
        const token = localStorage.getItem("token");

        if (!token) {
            alert("Você precisa estar logado para comprar ingressos.");
            window.location.href = "/login";
            return;
        }

        // Enviar requisição GET com token no cabeçalho Authorization
        const response = await fetch(`/buy/${ticketId}`, {
            method: "GET",
            headers: {
                "Authorization": `Bearer ${token}`
            }
        });

        if (response.ok) {
            window.location.href = `/buy/${ticketId}`;
        } else {
            const errorData = await response.json();
            alert("Erro ao acessar a página de compra: " + errorData.error);
        }
    });
});
</script>
