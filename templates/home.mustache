{{> partials/header}}

<div class="container">
    <h1 class="title">Escolha seus Ingressos</h1>

    <ul class="ticket-list">
        {{#tickets}}
        <li class="ticket-card">
            <p class="ticket-name"><strong>{{name}}</strong></p>
            <p class="ticket-price">üí∞ Pre√ßo: R$ {{price}}</p>
            <p class="ticket-stock">üì¶ Dispon√≠veis: {{stock}} ingressos</p>
            <button class="buy-btn" data-ticket-id="{{_id}}">Comprar</button>
        </li>
        {{/tickets}}
    </ul>
</div>

{{> partials/footer}}

<script>
document.querySelectorAll('.buy-btn').forEach(button => {
    button.addEventListener('click', async function(event) {
        event.preventDefault();

        const ticketId = this.getAttribute('data-ticket-id');
        const token = localStorage.getItem("token");

        if (!token) {
            alert("‚ö†Ô∏è Voc√™ precisa estar logado para comprar ingressos.");
            window.location.href = "/login";
            return;
        }

        // Enviar requisi√ß√£o GET com token no cabe√ßalho Authorization
        const response = await fetch(`/buy/${ticketId}`, {
            method: "GET",
            headers: {
                "Authorization": `Bearer ${token}`
            }
        });

        if (response.ok) {
            window.location.href = `/buy/${ticketId}`;
        } else {
            const errorData = await response.json();
            alert("‚ùå Erro ao acessar a p√°gina de compra: " + errorData.error);
        }
    });
});
</script>

